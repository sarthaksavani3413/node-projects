<%- include('../header') %>

    <div class="page-wrapper"
        style="background-color: #f8f9fa; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 50px 15px;">
        <div class="card shadow-lg p-4" style="max-width: 700px; width: 100%; border-radius: 15px;">

            <div class="text-center mb-4">
                <img src="<%= blog.image %>" alt="<%= blog.title %>" class="img-fluid rounded"
                    style="max-height: 350px; object-fit: cover; width: 100%; transition: transform 0.4s ease;">
            </div>

            <h2 class="mb-3 fw-bold" style="color: #333;">
                <%= blog.title %>
            </h2>

            <p class="text-muted mb-4">
                <strong>Category:</strong>
                <%= blog.category %>
            </p>

            <p style="font-size: 1.1rem; line-height: 1.8; color:#555;">
                <%= blog.description %>x
            </p>

            <div class="text-center mt-4">
                <a href="/blog/viewBlog" class="btn btn-primary btn-lg px-4 rounded-pill" style="transition: all 0.3s;">
                    â¬… Back to Blogs
                </a>
            </div>
        </div>
    </div>

    <%- include('../footer') %>