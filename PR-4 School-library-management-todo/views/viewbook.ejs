<%- include('sidebar') %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>View Book</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body class="bg-light">
        <div class="container mt-5">
            <div class="card">
                <div class="row">
                    <div class="col-md-3">
                        <img src="<%= task.image %>" class="img-fluid rounded-start">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= task.title %>
                            </h4>
                            <p class="card-text"><strong>Author:</strong>
                                <%= task.author %>
                            </p>
                            <p class="card-text"><strong>Genre:</strong>
                                <%= task.genre %>
                            </p>
                            <p class="card-text"><strong>Total:</strong>
                                <%= task.total %>
                            </p>
                            <p class="card-text"><strong>Description:</strong>
                                <%= task.description %>
                            </p>
                            <a href="/showtask" class="btn btn-secondary">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    </html>