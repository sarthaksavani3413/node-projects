<%- include('sidebar') %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>Book Catalog</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/yourkitid.js" crossorigin="anonymous"></script> <!-- FA icons -->
    </head>

    <body class="bg-light">
        <div class="container mt-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">
                    <i class="bi bi-book"></i> Book Catalog
                </h4>
                <a href="/todo" class="btn btn-success">+ Add Book</a>
            </div>

            <table class="table table-bordered table-striped align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Genre</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% alltaskdata.map(task=> { %>
                        <tr>
                            <td class="d-flex align-items-center gap-2">
                                <img src="<%= task.image %>" width="40" height="55" class="rounded shadow-sm">
                                <%= task.title %>
                            </td>

                            <td>
                                <%= task.author %>
                            </td>

                            <td>
                                <%= task.isbn %>
                            </td>

                            <td>
                                <%= task.genre %>
                            </td>

                            <td>
                                <%= task.total %>
                            </td>

                            <td>
                                <a href="/task/<%= task._id %>" class="btn btn-info btn-sm me-1">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a href="/edit/<%= task._id %>" class="btn btn-warning btn-sm me-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="/delete/<%= task._id %>" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </body>

    </html>