<%- include('sidebar') %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Add Book Form</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    </head>

    <body class="bg-light">
        <div class="container mt-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fa-solid fa-book me-2"></i>Add Book</h4>
                </div>
                <div class="card-body">
                    <form action="/addtask" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="mb-4 col-md-6">
                                <label for="author" class="form-label">Author</label>
                                <input type="text" class="form-control shadow-none" id="author" name="author"
                                    placeholder="Enter author name">
                            </div>

                            <div class="mb-3 col-md-6">
                                <label for="title" class="form-label">Book Title</label>
                                <input type="text" class="form-control shadow-none" id="title" name="title"
                                    placeholder="Enter book title">
                            </div>
                        </div>

                        <div class="row">
                            <div class="mb-4 col-md-6">
                                <label for="genre" class="form-label">Genre</label>
                                <select class="form-select shadow-none" id="genre" name="genre">
                                    <option selected disabled>Select genre</option>
                                    <option value="Fantasy">Fantasy</option>
                                    <option value="Science Fiction">Science Fiction</option>
                                    <option value="Romance">Romance</option>
                                    <option value="Mystery">Mystery</option>
                                    <option value="Horror">Horror</option>
                                </select>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label for="total" class="form-label">Total Books</label>
                                <input type="number" class="form-control shadow-none" id="total" name="total"
                                    placeholder="Enter total books" min="1">
                            </div>
                        </div>

                        <div class="row">
                            <div class="mb-4 col-md-6">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control shadow-none" id="description" name="description" rows="1"
                                    placeholder="Enter book description"></textarea>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label for="image" class="form-label">Book Image</label>
                                <input type="file" class="form-control shadow-none" id="image" name="image">
                            </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Add Book</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>

    </html>
